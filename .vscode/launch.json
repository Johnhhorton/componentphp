    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Test with xdebug",
            "type": "php",
            "program": "${workspaceRoot}/vendor/bin/phpunit.bat --bootstrap vendor/autoload.php tests",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Launch index",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/index.php",
            "cwd": "${workspaceRoot}/",
            "port": 9000
        }
    ]
}